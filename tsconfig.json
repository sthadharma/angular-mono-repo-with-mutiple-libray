{
  "compileOnSave": false,
  "angularCompilerOptions": {
    "enableIvy": false,
    "allowEmptyCodegenFiles": false
  },
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2015",
    "module": "es2020",
    "lib": [
      "es2018",
      "dom"
    ],
    "paths": {
      "form-builder": [
        "dist/form-builder/form-builder",
        "dist/form-builder"
      ],
      "vendors": [
        "dist/vendors/vendors",
        "dist/vendors"
      ],
      "tools": [
        "dist/tools/tools",
        "dist/tools"
      ],
      "payment": [
        "dist/payment/payment",
        "dist/payment",
        "dist/payment/payment",
        "dist/payment"
      ]
    }
  }
}
